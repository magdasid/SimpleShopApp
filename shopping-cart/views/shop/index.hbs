{{# each products }}
  <div class="row">
    {{# each this }}
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="{{ this.imagePath }}" alt="brownie" class="img-responsive">
          <div class="caption">
            <h3>{{ this.title }}</h3>
            <p>{{ this.description }}</p>
            <div class="clearfix">
              <div class="price pull-left">{{ this.price }}z≈Ç</div>
              <a href="#" class="btn btn-default pull-right" role="button">Buy</a>
            </div>
          </div>
        </div>
      </div>
    {{/ each}}
  </div>
{{/ each}}

